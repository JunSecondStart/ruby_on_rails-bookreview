<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <figure>
        <%= image_tag @image_url,width: '60%', height: '200%' %>
        <figcaption><%= @title %><%= @author %></figcaption>
      </figure>
      <%= form_with(model: @review) do |f| %>
        <div class="mb-3">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the myfavorites</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

