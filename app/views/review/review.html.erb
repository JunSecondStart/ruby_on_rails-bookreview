<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_for @review,:url => {:action => :review} do |f| %>
        <div class="mb-3">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="mb-3">
        <%= f.label :star, 'オススメ度' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :heart, '好き度' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :intelligence, '知性' %>
        <%= f.password_field :intelligence, class: 'form-control' %>
      </div>  
        <%= f.submit 'Post', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the myfavorites</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

