<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-3">
      <figure>
        <%= image_tag $image_url,width: '90%', height: '150%' %>
        <figcaption><%= $title %><%= $author %><br></figcaption>
      </figure>
    </aside>
    <div class="col-sm-9">
      <%= render 'review1s/review1s', review1s: $review1s %>
    </div>
  </div>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the myfavorites</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>